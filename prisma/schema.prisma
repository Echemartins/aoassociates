generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum PublishStatus {
  DRAFT
  PUBLISHED
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          String   @default("ADMIN")

  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  slug           String        @unique
  title          String
  summary        String?
  location       String?
  year           Int?
  typology       String?
  client         String?
  services       String?
  sustainability String?
  tags           String[]      @default([])
  body           String?       // Markdown story
  coverImageUrl  String?
  status         PublishStatus @default(DRAFT)

  images         ProjectImage[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ProjectImage {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  projectId String  @db.ObjectId
  url       String
  alt       String
  caption   String?
  credit    String?
  notes     String?
  order     Int     @default(0)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ArchiveStatus {
  // Optional: keep it simple.
  // If you prefer, remove this enum and just use PublishStatus.
  // I’m keeping PublishStatus for consistency.
  UNUSED
}

model ArchiveProject {
  id               String        @id @default(auto()) @map("_id") @db.ObjectId
  slug             String        @unique
  title            String
  summary          String?
  location         String?

  // Archive-specific fields (tailored experience)
  originalYear     Int?          // e.g., when original building/project was done
  interventionYear Int?          // e.g., year of renovation / reconstruction / upgrade
  typology         String?       // can differ from active projects if needed
  interventionType String?       // e.g., Renovation, Restoration, Adaptive Reuse, Expansion
  scope            String?       // short description of work scope (one line)
  existingCondition String?      // “before” state
  constraints      String?       // archive-specific constraints
  strategy         String?       // archive-specific strategy
  outcome          String?       // archive-specific outcome

  sustainability   String?
  tags             String[]      @default([])
  body             String?       // Markdown narrative
  coverImageUrl    String?
  status           PublishStatus @default(DRAFT)

  images           ArchiveProjectImage[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ArchiveProjectImage {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  archiveProjectId String  @db.ObjectId
  url             String
  alt             String
  caption         String?
  credit          String?
  notes           String?
  order           Int      @default(0)

  archiveProject  ArchiveProject @relation(fields: [archiveProjectId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


model Post {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  slug        String        @unique
  title       String
  excerpt     String?
  category    String?
  tags        String[]      @default([])
  body        String?       // Markdown
  status      PublishStatus @default(DRAFT)
  publishedAt DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inquiry {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  email       String?
  phone       String?
  projectType String?
  message     String?
  status      String   @default("NEW")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String?
  message   String
  status    String   @default("OPEN")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
